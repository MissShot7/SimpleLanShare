<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossPlatformShare.Pages.AboutPage"
             Title="About">
    <StackLayout>

        <ScrollView>
                <VerticalStackLayout Padding="20" Spacing="15">
                    <!-- Project Title -->
                    <Label Text="SimpleLANShare"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

                    <!-- Project Description -->
                    <Label Text="SimpleLANShare is an open-source tool for sharing files over local network."
                   FontSize="16"
                   HorizontalTextAlignment="Center" />

                    <!-- Version Information -->
                    <Label Text="Version: 1.0.0" x:Name="VersionLabel"
                   FontSize="14"
                   HorizontalOptions="Center" />

                    <!-- Links Section -->
                    <StackLayout Spacing="10">
                        <Button Text="View on GitHub"
                        BackgroundColor="LightGreen"
                        TextColor="White"
                        CornerRadius="8"
                        Clicked="OnGitHubButtonClicked" />
                        
                        <!-- Text="Visit Website" 
                        BackgroundColor="LightGreen"
                        TextColor="White"
                        CornerRadius="8"
                        Clicked="OnWebsiteButtonClicked" /-->
                    </StackLayout>

                    <!-- Acknowledgments or Credits -->
                    <Label Text="Thank you for supporting SimpleLANShare!"
                   FontSize="14"
                   HorizontalTextAlignment="Center"
                   TextColor="Gray" />
                </VerticalStackLayout>
            </ScrollView>
    </StackLayout>
    
</ContentPage>